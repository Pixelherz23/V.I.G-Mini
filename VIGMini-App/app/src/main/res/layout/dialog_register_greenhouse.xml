<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogRG_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/dialogRG_productKeyEditText"
        android:text="@string/product_key"
        android:textColor="@color/appBackground"
        android:textSize="@dimen/inputLabelSize" />

    <EditText
        android:id="@+id/dialogRG_productKeyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@id/dialogRG_headline"
        android:layout_alignParentStart="true"/>
</RelativeLayout>